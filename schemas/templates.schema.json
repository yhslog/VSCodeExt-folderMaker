{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Y Folder Template Workspace Templates",
  "type": "object",
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "files"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path"],
              "properties": {
                "path": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "required": ["templates"]
}

