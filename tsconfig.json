{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["vscode", "node"],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "dist",
    "vitest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**"
  ]
}

